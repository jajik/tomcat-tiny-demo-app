<web-app version="3.0">
   <servlet>
      <servlet-name>Test</servlet-name>
      <servlet-class>com.test.Test</servlet-class>
   </servlet>
   <servlet-mapping>
      <servlet-name>Test</servlet-name>
      <url-pattern>/test</url-pattern>
   </servlet-mapping>

   <servlet>
      <servlet-name>Demo</servlet-name>
      <servlet-class>com.demo.Demo</servlet-class>
   </servlet>
   <servlet-mapping>
      <servlet-name>Demo</servlet-name>
      <url-pattern>/demo/*</url-pattern>
   </servlet-mapping>

   <servlet>
      <servlet-name>User</servlet-name>
      <servlet-class>com.user.User</servlet-class>
   </servlet>

   <listener>
      <listener-class>com.user.UserContext</listener-class>
   </listener>

   <servlet>
      <servlet-name>Blog</servlet-name>
      <servlet-class>com.blog.Blog</servlet-class>
   </servlet>

   <servlet-mapping>
      <servlet-name>User</servlet-name>
      <url-pattern>/user/*</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>Blog</servlet-name>
      <url-pattern>/blog/*</url-pattern>
   </servlet-mapping>
</web-app>
